<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.gagooda_project.mapper.CartMapper">
    <resultMap id="cartMap" type="cartDto" autoMapping="true">
        <id column="cart_id" property="cartId"/>
        <result column="product_id" property="productCode"/>
        <result column="option_id" property="optionCode"/>
        <result column="user_id" property="userId"/>
    </resultMap>

    <insert id="insertOne" parameterType="cartDto" useGeneratedKeys="true" keyProperty="cartId">
        INSERT INTO cart (count, product_code, option_code, user_id) VALUE (#{count},#{productCode},#{optionCode},#{userId})
    </insert>

    <select id="countByUserId" resultMap="cartMap">
        SELECT COUNT(*) FROM cart WHERE user_id=#{id}
    </select>
    <delete id="deleteById">
        DELETE FROM cart WHERE cart_id=#{id}
    </delete>
    <delete id="deleteAll">
        DELETE FROM cart WHERE user_id=#{id}
    </delete>
    <select id="listByUserId" resultMap="cartMap">
        SELECT * FROM cart WHERE user_id=#{id}
    </select>
</mapper>